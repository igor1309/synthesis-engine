# Copy to .env and fill in as needed. Never commit .env

# GitHub access (required for collection)
GH_PAT=
GITHUB_BASE_URL=

# OpenAI access (optional for dry-run or collector-only)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.2
OPENAI_BASE_URL=
OPENAI_RETRIES=4
OPENAI_BASE_DELAY_MS=400

# Context sizing
CONTEXT_MAX_TOKENS=120000
LINES_HEAD=0
LINES_TAIL=0

# Logging and behavior
LOG_LEVEL=info
DRY_RUN=0

# GitHub client settings
GITHUB_TIMEOUT=10000
GITHUB_RETRIES=4

# Proxy settings (optional)
HTTP_PROXY=
HTTPS_PROXY=
